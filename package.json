{
  "name": "dock-it-live",
  "version": "2.0.0",
  "description": "Universal Broadcast Dock for Live Sports - Modern ES6+ refactor of legacy G4 Scoreboard",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "lint": "eslint src --ext .js",
