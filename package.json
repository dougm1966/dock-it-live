    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "postcss": "^8.4.33",
    "prettier": "^3.2.4",
    "rimraf": "^5.0.5",
    "tailwindcss": "^3.4.1",
    "vite": "^5.0.11",
